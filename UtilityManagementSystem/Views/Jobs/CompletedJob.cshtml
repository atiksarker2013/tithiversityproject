@model IEnumerable<UtilityManagementSystem.Models.Job>

@{
                /**/

                ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Job Details</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Customer Name
        </th>
        <th>
            Job Request
        </th>
        <th>
            Job Name
        </th>
        <th>
            Job Description
        </th>
        
        <th>
            REmark
        </th>
        <th>
            Entry Date
        </th>
        <th>
            Schedule date
        </th>
        <th>
            Vendor starting date
        </th>
        <th>
            Vendor Completion date
        </th>
        <th>
            Job Completed date
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobRequestId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobDescription)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Remark)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EntryDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ScheduleDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VendorStartingDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VendorCompletionDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobCompletedDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
