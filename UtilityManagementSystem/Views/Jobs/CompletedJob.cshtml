@model IEnumerable<UtilityManagementSystem.Models.Job>

@{
                /**/

                ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All  Completed Job list</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
</p>
<table class="table">
    <tr>
        <th>
            Customer Name
        </th>
        <th>
            Job Request
        </th>
        <th>
            Job Name
        </th>
        <th>
            Job Description
        </th>
        
        <th>
            REmark
        </th>
        <th>
            Entry Date
        </th>
        <th>
            Schedule date
        </th>
        <th>
            Vendor starting date
        </th>
        <th>
            Vendor Completion date
        </th>
        <th>
            Job Completed date
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerJobRequest.JobName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceType.ServiceName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobDescription)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Remark)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerJobRequest.EntryDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerJobRequest.ScheduleDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VendorStartingDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VendorCompletionDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobCompletedDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "DirectDelete", "Jobs", new { id = item.Id }, new { onclick = "return confirm('Are you sure you want to delete this?')" })
        </td>
    </tr>
}

</table>
