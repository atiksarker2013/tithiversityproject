@model IEnumerable<UtilityManagementSystem.Models.CustomerJobRequest>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<a id="basic" href="#nada" class="button button-primary">Print Report</a>
<div class="demo twelve column">
<h2>All New Job Request</h2>

 
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.JobName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contact)
        </th>
        <th>
            Service Address
        </th>
        <th>
            Service Details
        </th>
        <th>
            Customer Budget
        </th>
        <th>
            Entry Date
        </th>
        <th>
            Schedule Date
        </th>
        <th>
            Return Schedule Date
        </th>
        <th>
            Customer Name
        </th>
        <th>
            Job Status
        </th>
        <th>
            Service Name
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JobName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceDetails)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerBudget)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScheduleDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnScheduleDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobStatus.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceType.ServiceName)
            </td>

        </tr>
    }

</table>

    </div>

<script>
    $('#basic').on("click", function () {
        $(".demo").printThis();
    });

</script>

