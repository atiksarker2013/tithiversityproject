@model IEnumerable<UtilityManagementSystem.Models.CustomerJobRequest>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Job List</h2>

<p>
    @Html.ActionLink("Create New", "CreateByCustomer")
</p>
<table class="table">
    <tr>
        <th>
            Job Name
        </th>
        <th>
            Contact
        </th>
        <th>
            Service Address
        </th>
        <th>
            Service Type
        </th>
        
        <th>
            Customer Budget
        </th>
        <th>
            Service Details
        </th>
        <th>
            EntryDate
        </th>
        <th>
            Schedule Date
        </th>
       
        
        <th>
            Job Status
        </th>
       
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.JobName)
        </td>


        <td>
            @Html.DisplayFor(modelItem => item.Contact)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceType.ServiceName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerBudget)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceDetails)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EntryDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ScheduleDate)
        </td>

      
        <td>
            @Html.DisplayFor(modelItem => item.JobStatus.Name)
        </td>
        
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id = item.Id })*@

            @*|
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
        </td>
    </tr>
    }

</table>
