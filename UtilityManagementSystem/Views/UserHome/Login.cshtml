@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@using (Html.BeginForm("Login", "UserHome", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
   
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col-md-3"><br /></div>
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">

                    <h3 class="text-center">
                        <img src="~/Content/assets/img/rcs_logo.png" />
                    </h3>
                </div>

                <div class="panel-body">
                    <h3>System User Login</h3>
                    <hr />
                    <div class="form-horizontal">
                        <h3>@ViewBag.mess</h3>

                        <div class="form-group">
                            <label class="col-md-2 control-label">Username</label>
                            <div class="col-md-10">
                                <input type="text" name="username" required="required" class="form-control" />

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Password</label>
                            <div class="col-md-10">
                                <input type="password" name="password" required="required" class="form-control" />
                            </div>
                        </div>





                    </div>
                </div>
                <div class="panel-footer">
                    <div class="col-md-offset-7">
                        @*<input type="submit" value="Log in" class="btn btn-primary" />*@
                        <button id="btnsubmit" class="btn btn-primary">Login</button>
                        <br/><br/>
                        <h3 style="color:red">@ViewBag.message</h3>
                        @*<div id="myId" class="alert alert-danger collapse" >
                            <a href="#" class="close" data-dismiss="alert">&times;</a>
                            <strong>Error</strong>There is a problem in your submission....

                        </div>*@
                    </div>

                </div>
                @*<script type="text/javascript">
                    $(document).ready(function () {
                        $('btnsubmit').click(function () {
                            $('#myId').show();
                        });

                    });
                    </script>*@
                <div class="panel-footer">
                    @*<footer>
                        <p>&copy; @DateTime.Now.Year - Developed by Husna Afrin </p>
                    </footer>*@
                </div>
            </div>
        </div>
        <div class="col-md-3"><br /></div>
    </div>


}

