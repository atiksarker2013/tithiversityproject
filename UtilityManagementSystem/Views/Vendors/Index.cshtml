@model IEnumerable<UtilityManagementSystem.Models.Vendor>

@{
    ViewBag.Title = "Index Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Vendor List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<a id="basic" href="#nada" class="button button-primary">Print container</a>
<div class="demo twelve columns">
    <table class="table">

        <tr>
            <th>
                Name
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Email
            </th>
            <th>
                Address
            </th>
            <th>
                Company Name
            </th>

            <th></th>
        </tr>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobile)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.companyName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DirectDelete", "Vendors", new { id = item.Id }, new { onclick = "return confirm('Are you sure you want to delete this?')" })
                </td>
            </tr>

        }

    </table>
