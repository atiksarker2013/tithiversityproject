@model IEnumerable<UtilityManagementSystem.Models.CustomerServiceClass>

@{
    ViewBag.Title = "CustomerService";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer Service</h2>

<table class="table table-bordered">
    <tr>
        <th>
            Job Name
        </th>
        <th>
            Service Description
        </th>
        <th>
            Service Type
        </th>
        <th>
            Customer Name
        </th>

        <th>
            @Html.DisplayNameFor(model => model.ScheduleDate)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.JobCompletedDate)
        </th>

        <th>
            Cost
        </th>
        <th>
           Items Needed
        </th>
      
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.JobName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.serviceDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ScheduleDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobCompletedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemsNeeded)
        </td>
       
    </tr>
}

</table>
<div><input type="button" name="Print" value="Print" onclick="window.print();"/></div>