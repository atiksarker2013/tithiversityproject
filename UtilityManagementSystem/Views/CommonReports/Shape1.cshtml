@model IEnumerable<UtilityManagementSystem.Models.Ratio>

@{
    ViewBag.Title = "Shape1";
    Layout = "~/Views/Shared/_LayoutReport.cshtml";
}

<script src="~/Scripts/shape/exporting.js"></script>

<script src="~/Scripts/shape/highcharts.js"></script>

<div class="jumbotron">
    <div id="container" style="min-width: 310px; height: 400px; max-width: 600px; margin: 0 auto"></div>
</div>
<script>
    $(document).ready(function () {

        $.getJSON("/CommonReports/GetData", function (data) {
            Highcharts.chart('container', {
                chart: {
                    plotBackgroundColor: null,
                    plotBorderWidth: null,
                    plotShadow: false,
                    type: 'pie'
                },
                title: {
                    text: 'Service Ratio'
                },
                tooltip: {
                    pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
                },
                plotOptions: {
                    pie: {
                        allowPointSelect: true,
                        cursor: 'pointer',
                        dataLabels: {
                            enabled: true,
                            format: '<b>{point.name}</b>: {point.percentage:.1f} %',
                            style: {
                                color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black'
                            }
                        }
                    }
                },
                series: [{
                    name: 'Brands',
                    colorByPoint: true,
                    data: [{


                        name: 'appliance',
                        y: data.appliance
                    }, {
                        name: 'shifting',
                        y: data.shifting
                    },
                    {
                        name: 'gadget',
                        y: data.gadget

                    },
                     {
                        name: 'business',
                        y: data.business

                    }, {
                        name: 'laundry',
                        y: data.laundry

                    }, {
                        name: 'beauty',
                        y: data.beauty

                    }, {
                        name: 'carwash',
                        y: data.carwash

                    } ,{
                        name: 'cleaning',
                        y: data.cleaning

                    } ,{
                        name: 'pest',
                        y: data.pest

                    },
                    {
                        name: 'Electrical',
                        y: data.Electrica
                    }]

                }]
            });
        });

    });

</script>

